# Environment variables for monitoring-enabled development setup

# Database Configuration
POSTGRES_DB=enterprise_auth_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# Backend Configuration
SECRET_KEY=development_secret_key_32_characters_or_longer_secure
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3002"]

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_METRICS_PATH=/metrics

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# Alerting Configuration (Optional for development)
SMTP_HOST=smtp.gmail.com:587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=monitoring@enterprise-auth.com
SLACK_WEBHOOK_URL=

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
STRUCTURED_LOGGING=true