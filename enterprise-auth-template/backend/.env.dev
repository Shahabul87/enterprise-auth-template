# Development Environment Configuration
# This file is for local development only

# Database Configuration
DATABASE_URL=postgresql+asyncpg://dev_user:dev_password@localhost:5432/enterprise_auth_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production-abc123xyz789
ENCRYPTION_KEY=gAAAAABhZ0123456789abcdefghijklmnopqrstuvwxyz=
JWT_SECRET_KEY=jwt-dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Configuration - Console Mode for Development
# This will log emails to console instead of sending them
EMAIL_ENABLED=false
EMAIL_FROM=noreply@localhost
EMAIL_FROM_NAME=Enterprise Auth Dev

# SMTP Configuration (disabled for development)
# Uncomment and configure these to test real email sending
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_TLS=true
# SMTP_SSL=false

# Magic Link Configuration
MAGIC_LINK_EXPIRE_MINUTES=15
FRONTEND_URL=http://localhost:3000

# Development Settings
ENVIRONMENT=development
DEBUG=true
SKIP_EMAIL_VERIFICATION_IN_DEV=true

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Rate Limiting (relaxed for development)
RATE_LIMIT_ENABLED=false

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=